generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model notes {
  id           Int      @id @default(autoincrement())
  note_title   String   @db.VarChar(255)
  note_content String?
  created_at   DateTime @default(now()) @db.Timestamp(6)
  updated_at   DateTime @default(now()) @db.Timestamp(6)
  authorID     String
  users        users    @relation(fields: [authorID], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tags         tags[]
}

model user_preferences {
  id          String  @id @default(uuid())
  color_mode  Boolean
  color_theme String  @db.VarChar(54)
  user        users   @relation(fields: [userId], references: [id])
  userId      String  @unique
}

model users {
  id         String            @id @default(uuid())
  first_name String?           @db.VarChar(255)
  last_name  String?           @db.VarChar(255)
  email      String            @unique @db.VarChar(255)
  age        Int               @db.SmallInt
  created_at DateTime          @default(now()) @db.Timestamp(6)
  updated_at DateTime          @default(now()) @updatedAt
  notes      notes[]
  prefs      user_preferences?

  @@index([email])
}

model tags {
  id        Int     @id @default(autoincrement())
  tag_name  String  @db.VarChar(255)
  tag_color Int     @db.SmallInt
  authorID  String
  notes     notes[]
}
